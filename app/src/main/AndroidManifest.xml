<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.muva.academy.android_shoppa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".object_box.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme"></activity>
        <activity android:name=".TestActivity" />
        <activity
            android:name=".ui.activities.CategoryActivity"
            android:label="Categories"
            android:parentActivityName=".ui.activities.ProductActivity" />
        <activity android:name=".ui.activities.HistoryActivity" />
        <activity
            android:name=".ui.activities.ViewOrdersActivity"
            android:label="Orders"
            android:parentActivityName=".ui.activities.CartActivity" />
        <activity
            android:name=".ui.activities.CheckoutActivity"
            android:label="CheckOut"
            android:parentActivityName=".ui.activities.CartActivity" />
        <activity
            android:name=".settings.ChangePersonalInformationActivity"
            android:label="Personal Information"
            android:parentActivityName=".settings.SettingsActivity" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.activities.ProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.activities.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.ResetPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".auth.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.CartActivity"
            android:parentActivityName=".ui.activities.ProductActivity" />
        <activity
            android:name=".ui.activities.ViewProductDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activities.ProductActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>